{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "clipboard-manager:allow-read-text",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$APPDATA/books/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/books/*"
        }
      ]
    },
    "store:default",
    "dialog:default"
  ]
}
